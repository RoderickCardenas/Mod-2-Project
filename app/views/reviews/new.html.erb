<h1>Write a new review for a game</h1>
<%= form_for @review do |f| %>
    <div id="drop_down">
<h2 id="new_review_game_menu">Select the game you would like to review from the drop down menu:</h2>
        <%= f.collection_select :game_id, Game.all, :id, :title %>
    </div>
        <div>
            <%= f.label :content %>
            <%= f.text_area :content %>
        <br>
        <br>
            <%= f.label :rating %>
            <%= f.number_field :rating, min: 1, max: 10 %>
        </div>
    <br>
        <div id="button">
        <%= button_to "Submit your review", method: :post %>
        </div>
<% end %>